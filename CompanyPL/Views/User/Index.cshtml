@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>All Users</h1>
<br />
<br />


<br />
<div class="row justify-content-center align-items-center">
    <form class="row col-8 offset-1">
        <div class="col-8">
            <input type="text" class="form-control" name="email" placeholder="Search By Email" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success" />

        </div>
    </form>
</div>

<br />
<br />
@if (Model.Count() > 0)
{
    <div class=" d-flex justify-content-center align-items-center">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(d=>d.Id)</th>
                    <th>@Html.DisplayNameFor(d=>d.FName)</th>
                    <th>@Html.DisplayNameFor(d=>d.LName)</th>
                    <th>@Html.DisplayNameFor(d=>d.Email)</th>
                    <th>@Html.DisplayNameFor(d=>d.PhoneNumber)</th>
                    <th>@Html.DisplayNameFor(d=>d.Roles)</th>
                    

                    <th>Details</th>
                    <th>Update</th>
                    <th>Delete</th>

                </tr>
            </thead>

            <tbody>
                @foreach (var user in Model)
                {
                    <tr>

                        <td>@Html.DisplayFor(d=>user.Id)</td>
                        <td>@Html.DisplayFor(d=>user.FName)</td>
                        <td>@Html.DisplayFor(d=>user.LName)</td>
                        <td>@Html.DisplayFor(d=>user.Email)</td>
                        <td>@Html.DisplayFor(d=>user.PhoneNumber)</td>
                        <td>@string.Join(",",user.Roles)</td>
                       
                        
                        <td>
                            <a asp-action="Details" class="btn btn-warning" asp-route-id="@user.Id">
                                <i class="fas fa-eye"></i> Details
                            </a>
                        </td>
                        <td>
                            <a asp-action="Edit" class="btn btn-info" asp-route-id="@user.Id">
                                @* .ToString *@
                                <i class="fa-solid fa-pen"></i> Update
                            </a>
                        </td>
                        <td>
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@user.Id">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="mt-5 alert alert-warning ">
        <h3>There is No Users</h3>
    </div>
}


