@if(Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(d=>d.Code)</th>
                <th>@Html.DisplayNameFor(d=>d.Name)</th>
                <th>@Html.DisplayNameFor(d=>d.DateOfCreation)</th>
                <th>@Html.DisplayNameFor(d=>d.Image)</th>

                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
               
            </tr>
        </thead>

        <tbody>
            @foreach(var department in Model)
            {
                <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.DateOfCreation</td>
                    <td>
                        <img src="~/Files/Images/@department.ImageName" width="30" height="30" class="img-fluid rounded " alt="Department Image"  />
                    </td>
                    <td>
                        <a asp-action="Details" class="btn btn-warning" asp-route-id="@department.Id">
                           <i class="fas fa-eye"></i> Details
                        </a>
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-info" asp-route-id="@department.Id">
                            <i class="fa-solid fa-pen"></i> Update
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@department.Id">
                            <i class="fa-solid fa-Trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
   <div class="mt-5 alert alert-warning ">
        <h3>There is No Department</h3>
   </div> 
}



