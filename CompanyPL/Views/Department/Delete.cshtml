@model DepartmentViewModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Are Ypu Sure Delete This Department ?</h1>
<br />
<br />
<form asp-action="Delete">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <lable class="col-form-label" asp-for="Code">Code</lable>
        <input class="form-control" asp-for="Code" type="text" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group">

        <lable class="col-form-label" asp-for="Name">Name</lable>
        <input class="form-control" asp-for="Name" type="text" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">

        <lable class="col-form-label" asp-for="DateOfCreation">DateOfCreation</lable>
        <input class="form-control" asp-for="DateOfCreation" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-light">Cancel</a>

    <input hidden asp-for="ImageName" />

</form>

